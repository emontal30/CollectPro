{
  "name": "collectpro",
  "version": "1.0.0",
  "description": "نظام متكامل لإدارة التحصيلات والاشتراكات والمدفوعات",
  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack serve --mode development",
    "start": "npm run build && npm run serve",
    "serve": "python -m http.server 8000",
    "server": "node server.js",
    "local": "node server.js",
    "vercel-build": "npm run build && npm run copy-static",
    "copy-static": "mkdir -p dist && cp *.html *.css *.js *.png *.json dist/ 2>/dev/null || echo 'Static files copied'",
    "analyze": "NODE_ENV=production webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.{js,css,html}\"",
    "test": "node tests/run-tests.js",
    "test:security": "node tests/security-tests.js",
    "test:performance": "node tests/performance-tests.js",
    "test:functional": "node tests/functional-tests.js"
  },
  "keywords": [
    "تحصيلات",
    "إدارة",
    "بيانات",
    "تطبيق ويب",
    "اشتراكات",
    "مدفوعات"
  ],
  "author": "أيمن حافظ",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.2",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.3",
    "css-minimizer-webpack-plugin": "^4.2.2",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "html-webpack-plugin": "^5.5.0",
    "image-minimizer-webpack-plugin": "^3.8.3",
    "mini-css-extract-plugin": "^2.7.2",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.8.8",
    "style-loader": "^3.3.2",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.11.0",
    "bootstrap": "^5.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^6.1.5",
    "jquery": "^3.6.4",
    "nodemailer": "^6.9.3"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ]
}
