# إعادة توجيه جميع المسارات إلى index.html لدعم SPA
/*    /index.html   200

# إعادة توجيه API routes إلى الخادم المناسب
/api/*  https://your-project-id.supabase.co/rest/v1/:splat  200

# استثناء الملفات الثابتة من إعادة التوجيه
/assets/*   /assets/:splat   200
/public/*   /public/:splat   200
/fonts/*    /fonts/:splat    200
/sw.js      /sw.js           200
/manifest.json  /manifest.json  200